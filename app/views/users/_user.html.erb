<%= turbo_frame_tag user do %>
  <div class="user">
    <%= link_to user.name, user_path(user), data: { turbo_frame: "_top" } %>

    <div class="user__actions">
      <%= button_to "Excluir",
                    user_path(user),
                    method: :delete,
                    form: { data: { turbo_frame: "_top" }},
                    data: { turbo_confirm: "Are you sure you want to delete this user?" },
                    class: 'btn btn--light' %>
      <%= link_to "Editar",
                  edit_user_path(user),
                  class: 'btn btn--light' %>
    </div>
  </div>
<% end %>
